@using MVCMusicStore5.BusinessLogic
@{
    var genreList = BusinessMethods.GetGenres();
}
<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Genres<span class="caret"></span></a>
<ul class="dropdown-menu">

    @foreach (var item in @genreList)
    {
        <li>
            <a asp-controller="Album" asp-action="ViewAlbumsByGenre" asp-route-id="@item.GenreId">@item.Name</a>
        </li>
        <li role="separator" class="divider"></li>
    }
</ul>
